.main_div
	-if notice != nil
		<div class="alert alert-success" style="margin-top:-50px;">
		<a style="cursor:pointer;" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		<p>#{notice}</p>
		</div>
	%img.main_logo.img-responsive{src:"/assets/mortys_logo.png"}
	%br
	%div{style:"width:100%;background-color:rgba(0,0,0,0.5);padding:10px;margin-top:20px;"}
		.row
			.col-sm-6
				%h5{style:"font-size:30px;color:white;margin-top:20px;"} Add your email to get notified <br> when weekly confirmation starts
				
			.col-sm-6
				%h5{style:"font-size:30px;color:white;margin-top:20px;"} View current or most recent event
				
		.row{style:"margin-top:0px;"}
			.col-sm-6
				%a{href:"/add_email"}
					.btn.btn-default{style:"margin-top:20px;width:150px;height:50px;line-height:35px;margin-bottom:20px;"} Add email
			.col-sm-6
				%a{href:"#{event_path(Event.last)}"}
					.btn.btn-default{style:"margin-top:20px;width:150px;height:50px;line-height:35px;margin-bottom:20px;"} View event